{
    "name": "Ruriweb Contents Blocker",
    "description": "루리웹 컨텐츠 차단기",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": ["storage"],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["logger.js", "content-selector.js"]
        }, {
            "matches": [
                "*://*.bbs.ruliweb.com/*", "*://bbs.ruliweb.com/*", "*://m.ruliweb.com/*"
            ],

            "js": ["app.js"]
        }
    ],

    "browser_action": {
        "default_popup": "app.html"
    }
}
