{
    "name": "Ruriweb Contents Blocker",
    "description": "루리웹 컨텐츠 차단기",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
        "default_popup": "app.html"
    },

    "permissions": [
        "*://*.bbs.ruliweb.com/", "*://bbs.ruliweb.com/", "*://m.ruliweb.com/"
    ],

    "background": {
        "scripts": ["logger.js"]
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.bbs.ruliweb.com/*", "*://bbs.ruliweb.com/*", "*://m.ruliweb.com/*"
            ],

            "js": [
                "logger.js", "app.js"
            ],

            "css": ["app.css"]
        }
    ]
}
