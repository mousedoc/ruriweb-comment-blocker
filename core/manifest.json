{
    "name": "Ruriweb Comment Blocker",
    "description": "루리웹 댓글 차단기",
    "version": "1.0",
    "manifest_version": 3,

    "browser_action": {
        "default_popup": "index.html"
    },

    "permissions": [
        "*://*.bbs.ruliweb.com/*", "*://bbs.ruliweb.com/*"
    ],


    "content_scripts": [
        {
            "matches": [
                "*://*.bbs.ruliweb.com/*", "*://bbs.ruliweb.com/*"
            ],
            "js": ["blockService.js"]
        }
    ]
}
